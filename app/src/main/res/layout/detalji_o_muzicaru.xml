<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrikazDetaljaOMuzicaruActivity">

    <TextView
        android:id="@+id/detaljiNazivMuzicara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/detaljiZanrMuzicara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/detaljiWebStranicaMuzicara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/detaljiBiografijaMuzicara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detaljiNaslovTop5Pjesama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/detaljiTop5PjesamaMuzicara"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

</LinearLayout>